        <TextBox 
            x:Name="txtLastNameClient"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="16"
            Grid.Row="4"
            Grid.Column="1"
            Margin="10 0 0 0"
            Width="250"
            Height="25"
            MaxLength="12">
        </TextBox>
        <TextBox 
            x:Name="txtFirstNameClient"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="16"
            Grid.Row="5"
            Grid.Column="1"
            Margin="10 0 0 0"
            Width="250"
            Height="25"
            MaxLength="100">
        </TextBox>
        <TextBox 
            x:Name="txtPhoneClient"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="16"
            Grid.Row="6"
            Grid.Column="1"
            Margin="10 0 0 0"
            Width="250"
            Height="25"
            MaxLength="3">
        </TextBox>
        <TextBox 
            x:Name="txtAddressClient"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="16"
            Grid.Row="7"
            Grid.Column="1"
            Margin="10 0 0 0"
            Width="250"
            Height="25"
            MaxLength="3">
        </TextBox>
        <TextBox 
            x:Name="txtLastNameEmployee"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="16"
            Grid.Row="8"
            Grid.Column="1"
            Margin="10 0 0 0"
            Width="250"
            Height="25"
            MaxLength="100">
        </TextBox>

        <TextBox 
            x:Name="txtFirstNameEmployee"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="16"
            Grid.Row="9"
            Grid.Column="1"
            Margin="10 0 0 0"
            Width="250"
            Height="25"
            MaxLength="100">
        </TextBox>

        <!-- Блок с изображением -->

        <Border Grid.Row="10"
                Grid.Column="1"
                Grid.ColumnSpan="1"
                Grid.RowSpan="7"
                Margin="25,0,259,16"
                Width="150"
                Height="150"
                BorderThickness="2"
                BorderBrush="LightGray"
                CornerRadius="10">
            <Image x:Name="imgBook" 
                   Source="C:\Users\ARTEM\Source\Repos\Library2ISP11-17_ZeyArt_DanArt\Images\BookExtradition.jpg" />
        </Border>

        <Button  x:Name="btnChoosePhoto" 
                 Content="Выбрать изображение"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Right"
                 FontSize="16"
                 Grid.Row="12"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Margin="0 0 10 0"
                 Width="200"
                 Height="40"
                 Click="btnChoosePhoto_Click"/>

        <!-- Кнопка добавить -->

        <Button
            x:Name="btAdd"
            Content="Добавить"
            Grid.Row="16"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontWeight="Bold" 
     
            Width="130" 
            Click="btAdd_Click"
            Height="23" 
            Margin="35,3,269,0"
            Grid.Column="1" Grid.RowSpan="2" 
            />

