            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <TextBlock
            x:Name="tbTitle"
        Text="Добавление записи о выдаче книги"
            TextAlignment="Center"
        Grid.Row="0"
        VerticalAlignment="Center"
        HorizontalAlignment="Center" 
		FontSize="20" 
		FontWeight="Bold"
        Height="30" 
        Grid.ColumnSpan="2" 
        Width="371" Margin="252,-4,169,20" Grid.RowSpan="2"
        />
        <TextBlock
        Text="Дата выдачи"
        Grid.Row="1"
        VerticalAlignment="Center"
        HorizontalAlignment="Right" 
		FontSize="15" 
		FontWeight="Bold"
        Height="25" 
        />
        <TextBlock
        Text="Дата возврата"
        Grid.Row="2"
        VerticalAlignment="Center"
        HorizontalAlignment="Right" 
		FontSize="15" 
		FontWeight="Bold"
        Height="25" 
        />
        <TextBlock
        Text="Название книги"
        Grid.Row="3"
        VerticalAlignment="Center"
        HorizontalAlignment="Right" 
		FontSize="15" 
		FontWeight="Bold"
        Height="25" 
        />
        <TextBlock
        Text="Фамилия Клиента"
        Grid.Row="4"
        VerticalAlignment="Center"
        HorizontalAlignment="Right" 
		FontSize="15" 
		FontWeight="Bold"
        Height="25" 
        />
        <TextBlock
        Text="Имя Клиента"
        Grid.Row="5"
        VerticalAlignment="Center"
        HorizontalAlignment="Right" 
		FontSize="15" 
		FontWeight="Bold"
        Height="25" 
        />
        <TextBlock
        Text="Телефон Клиента"
        Grid.Row="6"
        VerticalAlignment="Center"
        HorizontalAlignment="Right" 
		FontSize="15" 
		FontWeight="Bold"
        Height="25" 
        />
        <TextBlock
        Text="Адрес Клиента"
        Grid.Row="7"
        VerticalAlignment="Center"
        HorizontalAlignment="Right" 
		FontSize="15" 
		FontWeight="Bold"
        Height="25" 
        />
        <TextBlock
        Text="Фамилия Сотрудника"
        Grid.Row="8"
        VerticalAlignment="Center"
        HorizontalAlignment="Right" 
		FontSize="15" 
		FontWeight="Bold"
        Height="25" 
        />

        <TextBlock
        Text="Имя Сотрудника"
        Grid.Row="9"
        VerticalAlignment="Center"
        HorizontalAlignment="Right" 
		FontSize="15" 
		FontWeight="Bold"
        Height="25" 
        />


        <TextBox 
            x:Name="txtDateExtradition"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="16"
            Grid.Row="1"
            Grid.Column="1"
            Margin="10 0 0 0"
            Width="250"
            Height="25"
            MaxLength="50">
        </TextBox>
        <TextBox 
            x:Name="txtDateReturn"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="16"
            Grid.Row="2"
            Grid.Column="1"
            Margin="10 0 0 0"
            Width="250"
            Height="25"
            MaxLength="50">
        </TextBox>
        <TextBox 
            x:Name="txtNameBook"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="16"
            Grid.Row="3"
            Grid.Column="1"
            Margin="10 0 0 0"
            Width="250"
            Height="25"
            MaxLength="50">
